<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dimen_20_dip"
        android:layout_marginRight="@dimen/dimen_20_dip"
        android:layout_marginBottom="@dimen/dimen_20_dip"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_24_dip"
            android:gravity="bottom"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点评记录"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_12_dip"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/teacher_comment_title"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投票:"
                android:textColor="#2CC4A0"
                android:textSize="@dimen/dimen_8_dip"
                android:layout_marginLeft="@dimen/dimen_8_dip"
                android:layout_toRightOf="@+id/teacher_comment_title"
                android:id="@+id/teacher_comment_txt"
                android:layout_alignParentBottom="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#2CC4A0"
                android:textSize="@dimen/dimen_8_dip"
                android:layout_toRightOf="@+id/teacher_comment_txt"
                android:id="@+id/teacher_comment_num"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:background="#CCCCCC"
            android:layout_marginTop="@dimen/dimen_8_dip"
            ></View>

        <ListView
            android:id="@+id/teacher_comment_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.v7.widget.CardView>
