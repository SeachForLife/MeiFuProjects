<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/t_bg2"
    android:id="@+id/login_relativelayout"
    android:clickable="true"
    android:onClick="login_click"
    >

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:id="@+id/login_systemset"
        android:layout_alignParentLeft="true"
        android:onClick="login_click"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/dimen_160_dip"
        android:layout_height="@dimen/dimen_24_dip"
        android:layout_marginTop="@dimen/dimen_152_dip"
        android:id="@+id/username_layout"
        android:layout_centerInParent="true"
        android:background="@drawable/student_bg1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="学号："
            android:gravity="center"
            android:textColor="#555555"
            android:layout_marginLeft="@dimen/dimen_16_dip"
            android:textSize="@dimen/dimen_8_dip"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/dimen_8_dip"
            android:textSize="@dimen/dimen_8_dip"
            android:hint="由数字和字母组合"
            android:background="@null"
            android:textColor="#555555"
            android:textColorHint="#B5B5B5"
            android:id="@+id/login_editvalue"
            android:text="01010002"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/dimen_160_dip"
        android:layout_height="@dimen/dimen_24_dip"
        android:background="@drawable/student_bg2"
        android:layout_centerInParent="true"
        android:layout_below="@+id/username_layout"
        android:layout_marginTop="@dimen/dimen_16_dip"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textSize="@dimen/dimen_10_dip"
            android:text="登录"
            android:id="@+id/login"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>
</RelativeLayout>
