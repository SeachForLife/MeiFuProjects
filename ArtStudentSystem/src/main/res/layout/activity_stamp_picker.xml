<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_25_dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stamp_pick_text1"
            android:layout_width="@dimen/dimen_64_dip"
            android:layout_height="fill_parent"
            android:background="@drawable/stamp_table_h"
            android:clickable="true"
            android:gravity="center"
            android:onClick="stampClick"
            android:textColor="#197dc4"
            android:textSize="@dimen/dimen_10_dip"
            android:text="印章" />
        <TextView
            android:layout_width="@dimen/dimen_64_dip"
            android:layout_height="fill_parent"
            android:text="背景"
            android:gravity="center"
            android:background="@drawable/stamp_table"
            android:id="@+id/stamp_pick_text2"
            android:onClick="stampClick"
            android:textColor="#555555"
            android:clickable="true"
            android:textSize="@dimen/dimen_10_dip"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/stamp_pick_fragment"
        android:background="@drawable/stamp_bg"
        >
    </FrameLayout>

</LinearLayout>