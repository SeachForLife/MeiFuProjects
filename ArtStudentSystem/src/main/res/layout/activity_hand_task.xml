<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_hand_task"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_56_dip"
        android:orientation="vertical"
        android:id="@+id/handtask_linlayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/tan_pic0"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_28_dip"
            android:text="拍照上传"
            android:textSize="@dimen/dimen_10_dip"
            android:textColor="#2cc4a0"
            android:gravity="center"
            android:onClick="onHandTaskClick"
            android:id="@+id/handtask_camera"
            />
        <ImageView
            android:layout_width="@dimen/dimen_156_dip"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="@drawable/tan_line"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_28_dip"
            android:text="画板提交"
            android:textSize="@dimen/dimen_10_dip"
            android:textColor="#2cc4a0"
            android:gravity="center"
            android:onClick="onHandTaskClick"
            android:id="@+id/handtask_paint"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_28_dip"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_6_dip"
        android:layout_below="@+id/handtask_linlayout"
        android:background="@drawable/tan_pic1"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_28_dip"
            android:text="取消"
            android:textSize="@dimen/dimen_10_dip"
            android:textColor="#2cc4a0"
            android:gravity="center"
            android:onClick="onHandTaskClick"
            android:id="@+id/handtask_cancel"
            />
    </LinearLayout>


</RelativeLayout>
