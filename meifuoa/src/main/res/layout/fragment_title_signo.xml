<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_43_dip"
    android:background="@drawable/bg_4"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/signo_out"
            android:onClick="main_map_click"
            >

            <ImageView
                android:layout_width="@dimen/dimen_17_dip"
                android:layout_height="@dimen/dimen_17_dip"
                android:layout_marginLeft="@dimen/dimen_18_dip"
                android:layout_gravity="left|center"
                android:background="@drawable/icon_out"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_16_dip"
                android:textColor="#FFFFFF"
                android:text="考勤打卡" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:id="@+id/signo_add"
            android:onClick="main_map_click"
            >
            <ImageView
                android:layout_width="@dimen/dimen_17_dip"
                android:layout_height="@dimen/dimen_17_dip"
                android:layout_marginRight="@dimen/dimen_18_dip"
                android:layout_gravity="right|center"
                android:background="@drawable/icon_add"
                android:id="@+id/signo_add_image"
                />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
