<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dimen_40_dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:id="@+id/draw_tools_layout"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tools_pencil"
                android:id="@+id/draw_tools_pencil"
                android:onClick="draw_Click"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tools_pen"
                android:id="@+id/draw_tools_pen"
                android:layout_marginTop="@dimen/dimen_8_dip"
                android:layout_marginLeft="@dimen/dimen_n16_dip"
                android:onClick="draw_Click"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tools_crayon"
                android:id="@+id/draw_tools_crayon"
                android:layout_marginTop="@dimen/dimen_8_dip"
                android:layout_marginLeft="@dimen/dimen_n16_dip"
                android:onClick="draw_Click"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tools_brush"
                android:id="@+id/draw_tools_brush"
                android:layout_marginTop="@dimen/dimen_8_dip"
                android:layout_marginLeft="@dimen/dimen_n16_dip"
                android:onClick="draw_Click"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tools_gun"
                android:id="@+id/draw_tools_gun"
                android:layout_marginTop="@dimen/dimen_8_dip"
                android:layout_marginLeft="@dimen/dimen_n16_dip"
                android:onClick="draw_Click"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tools_seal"
                android:id="@+id/draw_tools_seal"
                android:layout_marginTop="@dimen/dimen_8_dip"
                android:layout_marginLeft="@dimen/dimen_n16_dip"
                android:onClick="draw_Click"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tools_eraser"
                android:id="@+id/draw_tools_eraser"
                android:layout_marginTop="@dimen/dimen_8_dip"
                android:layout_marginLeft="@dimen/dimen_n16_dip"
                android:onClick="draw_Click"
                />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="@dimen/dimen_39_dip"
            android:layout_height="@dimen/dimen_287_dip"
            android:layout_marginTop="@dimen/dimen_17_dip"
            android:background="@drawable/bg4"
            android:gravity="top|center_horizontal"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_16_dip"
                android:layout_height="@dimen/dimen_16_dip"
                android:layout_marginTop="@dimen/dimen_8_dip"
                android:background="@drawable/t_icon0"
                android:onClick="draw_Click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textSize="@dimen/dimen_7_dip"
                android:id="@+id/test"
                android:layout_marginTop="@dimen/dimen_4_dip"
                android:textColor="@color/white"
                android:includeFontPadding="false"
                />

            <ImageView
                android:id="@+id/draw_sharing"
                android:layout_width="@dimen/dimen_16_dip"
                android:layout_height="@dimen/dimen_16_dip"
                android:background="@drawable/t_icon1"
                android:layout_marginTop="@dimen/dimen_5_dip"
                android:onClick="draw_Click"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同屏"
                android:textSize="@dimen/dimen_7_dip"
                android:layout_marginTop="@dimen/dimen_4_dip"
                android:textColor="@color/white"
                android:includeFontPadding="false"
                android:visibility="gone"
                />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5_dip"
                android:background="@drawable/bg_line" />

            <ImageView
                android:id="@+id/draw_water"
                android:layout_width="@dimen/dimen_25_dip"
                android:layout_height="@dimen/dimen_25_dip"
                android:background="@drawable/l_icon0_h"
                android:layout_marginTop="@dimen/dimen_4_dip"
                android:onClick="draw_Click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="彩笔"
                android:textSize="@dimen/dimen_8_dip"
                android:layout_marginTop="@dimen/dimen_3_dip"
                android:includeFontPadding="false"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/draw_caryon"
                android:layout_width="@dimen/dimen_25_dip"
                android:layout_height="@dimen/dimen_25_dip"
                android:background="@drawable/l_icon1"
                android:layout_marginTop="@dimen/dimen_4_dip"
                android:onClick="draw_Click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蜡笔"
                android:textSize="@dimen/dimen_8_dip"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/dimen_3_dip"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/draw_brush"
                android:layout_width="@dimen/dimen_25_dip"
                android:layout_height="@dimen/dimen_25_dip"
                android:layout_marginTop="@dimen/dimen_4_dip"
                android:background="@drawable/l_icon2"
                android:onClick="draw_Click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刷子"
                android:textSize="@dimen/dimen_8_dip"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/dimen_3_dip"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/draw_rubber"
                android:layout_width="@dimen/dimen_25_dip"
                android:layout_height="@dimen/dimen_25_dip"
                android:layout_marginTop="@dimen/dimen_4_dip"
                android:background="@drawable/l_icon3"
                android:onClick="draw_Click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="橡皮"
                android:textSize="@dimen/dimen_8_dip"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/dimen_3_dip"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/draw_stamp"
                android:layout_width="@dimen/dimen_25_dip"
                android:layout_height="@dimen/dimen_25_dip"
                android:layout_marginTop="@dimen/dimen_4_dip"
                android:background="@drawable/l_icon4"
                android:onClick="draw_Click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="印章"
                android:textSize="@dimen/dimen_8_dip"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/dimen_3_dip"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_marginBottom="@dimen/dimen_10_dip"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/draw_layout"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.carl_yang.view.DrawView
                    android:id="@+id/draw_canvas"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="大小调节"
                    android:textColor="@color/draw_ui_bottom"
                    android:textSize="@dimen/dimen_7_dip"
                    />

                <ImageView
                    android:layout_width="@dimen/dimen_8_dip"
                    android:layout_height="@dimen/dimen_8_dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_7_dip"
                    android:background="@drawable/icon_minus" />

                <SeekBar
                    android:id="@+id/draw_seekBar"
                    style="@style/Widget.SeekBar"
                    android:layout_width="@dimen/dimen_110_dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5_dip"
                    />

                <ImageView
                    android:layout_width="@dimen/dimen_8_dip"
                    android:layout_height="@dimen/dimen_8_dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_5_dip"
                    android:background="@drawable/icon_plus" />

                <LinearLayout
                    android:id="@+id/draw_color_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dimen_16_dip"
                    android:gravity="center"
                    android:onClick="draw_Click"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="颜色"
                        android:includeFontPadding="false"
                        android:textColor="@color/draw_ui_bottom"
                        android:textSize="@dimen/dimen_7_dip" />

                    <ImageView
                        android:id="@+id/draw_color_image"
                        android:layout_width="@dimen/dimen_14_dip"
                        android:layout_height="@dimen/dimen_14_dip"
                        android:layout_marginLeft="@dimen/dimen_5_dip"
                        android:background="@drawable/color16" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/draw_undo_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dimen_20_dip"
                    android:gravity="center"
                    android:onClick="draw_Click"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上一步"
                        android:includeFontPadding="false"
                        android:textColor="@color/draw_ui_bottom"
                        android:textSize="@dimen/dimen_7_dip" />

                    <ImageView
                        android:id="@+id/draw_undo_image"
                        android:layout_width="@dimen/dimen_10_dip"
                        android:layout_height="@dimen/dimen_8_dip"
                        android:layout_marginLeft="@dimen/dimen_5_dip"
                        android:background="@drawable/icon_arrow_l" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/draw_redo_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dimen_20_dip"
                    android:gravity="center"
                    android:onClick="draw_Click"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下一步"
                        android:includeFontPadding="false"
                        android:textColor="@color/draw_ui_bottom"
                        android:textSize="@dimen/dimen_7_dip" />

                    <ImageView
                        android:id="@+id/draw_redo_image"
                        android:layout_width="@dimen/dimen_10_dip"
                        android:layout_height="@dimen/dimen_8_dip"
                        android:layout_marginLeft="@dimen/dimen_5_dip"
                        android:background="@drawable/icon_arrow_r" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/draw_del_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dimen_20_dip"
                    android:gravity="center"
                    android:onClick="draw_Click"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清空"
                        android:includeFontPadding="false"
                        android:textColor="@color/draw_ui_bottom"
                        android:textSize="@dimen/dimen_7_dip" />

                    <ImageView
                        android:id="@+id/draw_del_image"
                        android:layout_width="@dimen/dimen_8_dip"
                        android:layout_height="@dimen/dimen_10_dip"
                        android:layout_marginLeft="@dimen/dimen_5_dip"
                        android:background="@drawable/icon_del" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dimen_20_dip"
                    android:layout_marginRight="@dimen/dimen_24_dip"
                    android:gravity="center"
                    android:onClick="draw_Click"
                    android:id="@+id/draw_back"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="返回"
                        android:includeFontPadding="false"
                        android:textColor="@color/draw_ui_bottom"
                        android:textSize="@dimen/dimen_7_dip" />

                    <ImageView
                        android:layout_width="@dimen/dimen_8_dip"
                        android:layout_height="@dimen/dimen_10_dip"
                        android:layout_marginLeft="@dimen/dimen_5_dip"
                        android:background="@drawable/hb_icon_0" />
                    </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
