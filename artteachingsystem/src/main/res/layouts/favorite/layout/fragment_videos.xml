<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_35_dip"
            android:background="@color/white"
            android:orientation="horizontal"
            android:id="@+id/videos_fragment_linearlayout"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/videos_fragment_spinner"
                    style="@style/spinner_style"
                    android:layout_width="@dimen/dimen_93_dip"
                    android:layout_height="@dimen/dimen_19_dip"
                    android:layout_marginLeft="@dimen/dimen_14_dip"
                    android:animationCache="true"
                    android:drawSelectorOnTop="true">

                </Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_7_dip"
                android:layout_weight="1"
                android:gravity="center">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/dimen_7_dip"
                    android:layout_marginRight="@dimen/dimen_11_dip"
                    android:gravity="right|center"
                    android:text="共有4个作品"
                    android:textColor="@color/black_common_font"
                    android:textSize="@dimen/dimen_10_dip"
                    android:id="@+id/videos_fragment_totalnum"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridView
                android:id="@+id/videos_fragment_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="@dimen/dimen_16_dip"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:paddingBottom="@dimen/dimen_16_dip"
                android:paddingLeft="@dimen/dimen_16_dip"
                android:paddingRight="@dimen/dimen_16_dip"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="@dimen/dimen_16_dip">

            </GridView>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/videos_fragment_framelayout"
        android:visibility="gone"
        android:background="@android:color/transparent"
        >

        <ImageView
            android:id="@+id/videos_fragment_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff000000" />

        <com.bm.library.PhotoView
            android:id="@+id/videos_fragment_photoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="睡莲和日本小乔"
                        android:id="@+id/videos_fragment_imagename"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/dimen_14_dip"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="克劳德‘莫奈（1840-1970）"
                        android:id="@+id/videos_fragment_auth"
                        android:textColor="@android:color/white"
                        android:background="@android:color/transparent"
                        android:textSize="@dimen/dimen_10_dip"
                        />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                >

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/videos_fragment_desc"
                        android:text="4444444444444444444444444"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:background="@android:color/transparent"
                        android:textSize="@dimen/dimen_8_dip"
                        />

                </ScrollView>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>


</FrameLayout>
