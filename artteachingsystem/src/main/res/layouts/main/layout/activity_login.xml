<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/t_bg1"
    android:id="@+id/login_relativelayout"
    android:clickable="true"
    android:onClick="login_click"
    >

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:id="@+id/login_systemset"
        android:layout_alignParentLeft="true"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/dimen_160_dip"
        android:layout_height="@dimen/dimen_24_dip"
        android:layout_marginTop="@dimen/dimen_152_dip"
        android:id="@+id/login_localurl_linear"
        android:background="@drawable/bg5"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="地址："
            android:gravity="center"
            android:textColor="#555555"
            android:layout_marginLeft="@dimen/dimen_16_dip"
            android:textSize="@dimen/dimen_8_dip"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/dimen_8_dip"
            android:textSize="@dimen/dimen_8_dip"
            android:text="http://192.168.1.114:8080/ArtTeaching/"
            android:background="@null"
            android:textColor="#555555"
            android:textColorHint="#B5B5B5"
            android:id="@+id/login_localurl"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/dimen_160_dip"
        android:layout_height="@dimen/dimen_24_dip"
        android:layout_marginTop="@dimen/dimen_152_dip"
        android:id="@+id/username_layout"
        android:layout_centerInParent="true"
        android:background="@drawable/bg5"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="账号："
            android:gravity="center"
            android:textColor="#555555"
            android:layout_marginLeft="@dimen/dimen_16_dip"
            android:textSize="@dimen/dimen_8_dip"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/dimen_8_dip"
            android:textSize="@dimen/dimen_8_dip"
            android:hint="由数字和字母组合"
            android:text=""
            android:background="@null"
            android:textColor="#555555"
            android:textColorHint="#B5B5B5"
            android:id="@+id/login_username"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/dimen_160_dip"
        android:layout_height="@dimen/dimen_24_dip"
        android:layout_centerInParent="true"
        android:layout_below="@+id/username_layout"
        android:layout_marginTop="@dimen/dimen_12_dip"
        android:id="@+id/password_layout"
        android:background="@drawable/bg5"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："
            android:gravity="center"
            android:textColor="#555555"
            android:layout_marginLeft="@dimen/dimen_16_dip"
            android:textSize="@dimen/dimen_8_dip"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center|left"
            android:textSize="@dimen/dimen_8_dip"
            android:layout_marginLeft="@dimen/dimen_8_dip"
            android:hint="6位数字"
            android:text=""
            android:textColorHint="#B5B5B5"
            android:textColor="#555555"
            android:password="true"
            android:background="@null"
            android:id="@+id/login_password"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/dimen_160_dip"
        android:layout_height="@dimen/dimen_24_dip"
        android:background="@drawable/bg6"
        android:layout_centerInParent="true"
        android:layout_below="@+id/password_layout"
        android:layout_marginTop="40px"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textSize="@dimen/dimen_10_dip"
            android:text="登录"
            android:id="@+id/login"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dimen_12_dip"
        android:layout_height="@dimen/dimen_12_dip"
        android:background="@drawable/icon_erro"
        android:layout_marginRight="@dimen/dimen_16_dip"
        android:layout_marginTop="@dimen/dimen_16_dip"
        android:layout_alignParentRight="true"
        android:id="@+id/login_updateversion"
        android:onClick="login_click"
        android:clickable="true"
        android:visibility="gone"
        />
</RelativeLayout>
