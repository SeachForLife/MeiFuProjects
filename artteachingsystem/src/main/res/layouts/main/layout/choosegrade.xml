<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_164_dip"
    android:layout_height="@dimen/dimen_24_dip"
    android:orientation="horizontal"
    android:minHeight="@dimen/dimen_24_dip"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:weightSum="5"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >


            </LinearLayout>

        <TextView
            android:id="@+id/grade_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="sfsfsf"
            android:textColor="#555555"
            android:textSize="21px" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|left"
            >

            <ImageView
                android:id="@+id/grade_image"
                android:layout_width="@dimen/dimen_11_dip"
                android:layout_height="@dimen/dimen_11_dip"
                android:background="@drawable/icon_check"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal" />
            </LinearLayout>

    </LinearLayout>

</LinearLayout>