<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_20_dip"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:layout_marginRight="@dimen/dimen_11_dip"
            >

            <ImageView
                android:layout_width="@dimen/dimen_20_dip"
                android:layout_height="@dimen/dimen_20_dip"
                android:layout_gravity="center"
                android:id="@+id/catalog_image"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="XX教师"
                android:textSize="@dimen/dimen_10_dip"
                android:textColor="@color/white"
                android:gravity="right|center"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_4_dip"
                android:id="@+id/catalog_teacher_name"
                />

            <ImageView
                android:layout_width="@dimen/dimen_20_dip"
                android:layout_height="@dimen/dimen_20_dip"
                android:layout_gravity="center"
                android:id="@+id/catalog_exit"
                android:background="@drawable/icon_back_m"
                android:onClick="Click_Catalog"
                android:layout_marginLeft="@dimen/dimen_11_dip"
                />

            </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical|center|left"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_95_dip"
            android:layout_marginTop="@dimen/dimen_80_dip"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="@dimen/dimen_228_dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_block_0"
                    android:id="@+id/catalog_look"
                    android:onClick="Click_Catalog"
                    android:layout_centerInParent="true"
                    />
                </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="@dimen/dimen_228_dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_block_1"
                    android:id="@+id/catalog_favorite"
                    android:onClick="Click_Catalog"
                    android:layout_centerInParent="true"
                    />
                </RelativeLayout>

            </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical|left"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_95_dip"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="@dimen/dimen_228_dip"
                android:layout_height="match_parent"
                android:background="@drawable/main_block_2"
                android:id="@+id/catalog_tasks"
                android:onClick="Click_Catalog"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="@dimen/dimen_228_dip"
                android:layout_height="match_parent"
                android:background="@drawable/main_block_3"
                android:id="@+id/catalog_draw"
                android:onClick="Click_Catalog"
                android:layout_centerInParent="true"
                />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_28_dip"
            android:gravity="right|center"
            android:layout_marginRight="@dimen/dimen_16_dip"
            android:layout_marginTop="@dimen/dimen_35_dip"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="@dimen/dimen_28_dip"
                android:layout_height="@dimen/dimen_28_dip"
                android:background="@drawable/s_icon0"
                android:layout_gravity="center_horizontal|center_vertical"
                android:id="@+id/catalog_lookstudent"
                android:onClick="Click_Catalog"
                android:visibility="gone"
                />
            <ImageView
                android:layout_width="@dimen/dimen_28_dip"
                android:layout_height="@dimen/dimen_28_dip"
                android:background="@drawable/s_icon3"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="@dimen/dimen_24_dip"
                android:onClick="Click_Catalog"
                />
            </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="@dimen/dimen_5_dip"
        android:layout_marginRight="@dimen/dimen_16_dip"
        android:layout_marginBottom="@dimen/dimen_9_dip"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="@dimen/dimen_48_dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="查看学生屏幕"
            android:textSize="@dimen/dimen_8_dip"
            android:textColor="@color/white"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="@dimen/dimen_28_dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="退出"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dimen_16_dip"
            />

        </LinearLayout>
        </LinearLayout>

</RelativeLayout>
