<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="@dimen/dimen_108_dip"
        android:layout_height="@dimen/dimen_140_dip"
        android:background="#9dd8ff"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="@dimen/dimen_106_dip"
            android:layout_height="@dimen/dimen_138_dip"
            android:id="@+id/gridview_image"
            android:scaleType="fitCenter"
            />

    </LinearLayout>

    <TextView
        android:layout_width="@dimen/dimen_108_dip"
        android:layout_height="wrap_content"
        android:id="@+id/gridview_str"
        android:text="一年级(上册)"
        android:textSize="@dimen/dimen_10_dip"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_8_dip"
        android:textColor="#555555"
        />

</LinearLayout>