<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <GridView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:numColumns="4"
        android:verticalSpacing="@dimen/dimen_16_dip"
        android:horizontalSpacing="@dimen/dimen_16_dip"
        android:paddingTop="@dimen/dimen_16_dip"
        android:paddingBottom="@dimen/dimen_16_dip"
        android:paddingLeft="@dimen/dimen_16_dip"
        android:paddingRight="@dimen/dimen_16_dip"
        android:id="@+id/course_ware_content_gridview"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:stretchMode="columnWidth"
        ></GridView>

</FrameLayout>